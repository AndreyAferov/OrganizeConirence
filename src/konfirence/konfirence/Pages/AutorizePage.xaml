<Page x:Class="konfirence.Pages.AutorizePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:konfirence.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizePage"
      Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Логин"></Label>
            <TextBox x:Name="LoginText"></TextBox>
            <Label Content="Пароль"></Label>
            <PasswordBox x:Name="PasswordText"></PasswordBox>
            <Canvas x:Name="CaptchaCanvas" Width="120" Height="40" Margin="10" Visibility="Collapsed"/>
            <TextBox x:Name="CaptchaTextBox" Width="100" Height="30" Margin="10" Visibility="Collapsed"/>
            <Button Content="Войти" Margin="10" x:Name="LoginButton" Click="LoginButton_Click"></Button>
            <Button Content="Назад" Margin="10" x:Name="BackButton" Click="BackButton_Click"></Button>

        </StackPanel>
    </Grid>
</Page>
